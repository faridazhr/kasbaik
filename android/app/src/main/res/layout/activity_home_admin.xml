<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_ijo"
    android:fillViewport="true"
    tools:context=".ui.beranda.login.superadmin.home.HomeAdminActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/greet_superadmin"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corners"
            app:layout_constraintStart_toStartOf="@+id/tv_greeting"
            app:layout_constraintTop_toBottomOf="@+id/tv_greeting" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kasbaik_dalam_angka"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@id/container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_label_total_pendanaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_pendanaan"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/container"
            app:layout_constraintTop_toBottomOf="@id/title_name"/>

        <TextView
            android:id="@+id/tv_label_jumlah_peminjam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jumlah_peminjam"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@id/tv_label_total_pendanaan"
            app:layout_constraintTop_toBottomOf="@id/tv_label_total_pendanaan"/>

        <TextView
            android:id="@+id/tv_label_peminjaman_berhasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/peminjaman_berhasil"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_label_jumlah_peminjam"
            app:layout_constraintEnd_toEndOf="@+id/tv_label_jumlah_peminjam"/>

        <TextView
            android:id="@+id/tv_label_list_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/list_pending"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/tv_label_peminjaman_berhasil"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_peminjaman_berhasil" />

        <TextView
            android:id="@+id/tv_total_pendanaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp.201112012"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/tv_label_total_pendanaan"
            app:layout_constraintEnd_toEndOf="@+id/container"
            app:layout_constraintTop_toBottomOf="@+id/title_name"/>

        <TextView
            android:id="@+id/tv_jumlah_peminjam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="210 Peminjam"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/tv_label_jumlah_peminjam"
            app:layout_constraintEnd_toEndOf="@id/container"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_pendanaan"/>

        <TextView
            android:id="@+id/tv_peminjaman_berhasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="180 Peminjam"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/tv_label_peminjaman_berhasil"
            app:layout_constraintEnd_toEndOf="@id/container"
            app:layout_constraintTop_toBottomOf="@id/tv_jumlah_peminjam"/>

        <TextView
            android:id="@+id/tv_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="31 Peminjam"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="@color/orange"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_peminjaman_berhasil"
            app:layout_constraintStart_toEndOf="@+id/tv_label_list_pending"
            app:layout_constraintEnd_toEndOf="@id/container"/>

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            android:text="@string/profile"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@+id/container"/>

        <Button
            android:id="@+id/btn_mitra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            android:text="@string/mitra"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@+id/btn_profile"/>

        <Button
            android:id="@+id/btn_pengguna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="@string/pengguna"
            app:layout_constraintTop_toBottomOf="@+id/btn_mitra"/>

        <Button
            android:id="@+id/btn_list_peminjam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="@string/list_peminjam"
            app:layout_constraintTop_toBottomOf="@+id/btn_pengguna"/>

        <Button
            android:id="@+id/btn_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="@string/pembayaran"
            app:layout_constraintTop_toBottomOf="@+id/btn_list_peminjam"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>