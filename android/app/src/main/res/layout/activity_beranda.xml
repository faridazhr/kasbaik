<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_ijo"
    tools:context=".ui.beranda.BerandaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/image_beranda"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/logo_kasibaik"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>

        <Button
            android:id="@+id/about"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:text="Tentang KasBaik"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="@+id/image_beranda"
            app:layout_constraintTop_toBottomOf="@+id/image_beranda"
            app:layout_constraintEnd_toEndOf="@+id/image_beranda"/>

        <Button
            android:id="@+id/isikas"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="@string/isikas"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="@+id/about"
            app:layout_constraintTop_toBottomOf="@+id/about"
            app:layout_constraintEnd_toEndOf="@+id/about"/>

        <Button
            android:id="@+id/login"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="@string/login"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="@+id/isikas"
            app:layout_constraintTop_toBottomOf="@+id/isikas"
            app:layout_constraintEnd_toEndOf="@+id/isikas"/>

        <Button
            android:id="@+id/register"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="@string/register"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="@+id/login"
            app:layout_constraintTop_toBottomOf="@+id/login"
            app:layout_constraintEnd_toEndOf="@+id/login"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>