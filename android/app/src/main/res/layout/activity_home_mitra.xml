<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_ijo"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/greet_user"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corners"
            app:layout_constraintStart_toStartOf="@+id/tv_greeting"
            app:layout_constraintTop_toBottomOf="@+id/tv_greeting" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mitra Name"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@id/container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_label_total_pendanaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Payment"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/container"
            app:layout_constraintTop_toBottomOf="@id/title_name"/>

        <TextView
            android:id="@+id/tv_label_jumlah_peminjam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Peminjam"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/container"
            app:layout_constraintTop_toBottomOf="@id/tv_label_total_pendanaan"/>

        <TextView
            android:id="@+id/tv_label_pinjaman_diterima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pinjaman diterima"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/container"
            app:layout_constraintTop_toBottomOf="@id/tv_label_jumlah_peminjam" />

        <TextView
            android:id="@+id/tv_label_list_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="List Pending"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/container"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_pinjaman_diterima" />

        <TextView
            android:id="@+id/tv_total_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.201112012"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/tv_label_pinjaman_diterima"
            app:layout_constraintEnd_toEndOf="@+id/container"
            app:layout_constraintTop_toBottomOf="@+id/title_name"/>

        <TextView
            android:id="@+id/tv_jumlah_peminjam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="210 Peminjam"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/tv_label_pinjaman_diterima"
            app:layout_constraintEnd_toEndOf="@id/container"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_payment"/>

        <TextView
            android:id="@+id/tv_peminjaman_diterima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="180 Peminjam"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/tv_label_pinjaman_diterima"
            app:layout_constraintEnd_toEndOf="@id/container"
            app:layout_constraintTop_toBottomOf="@id/tv_jumlah_peminjam"/>

        <TextView
            android:id="@+id/tv_total_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31 Peminjam"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="@color/orange"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_peminjaman_diterima"
            app:layout_constraintStart_toEndOf="@+id/tv_label_pinjaman_diterima"
            app:layout_constraintEnd_toEndOf="@id/container"/>

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@+id/container"/>

        <Button
            android:id="@+id/btn_list_peminjam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            android:text="List Peminjam"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@+id/btn_edit_profile"/>

        <Button
            android:id="@+id/btn_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            android:text="Pembayaran"
            app:layout_constraintTop_toBottomOf="@+id/btn_list_peminjam"/>

        <Button
            android:id="@+id/btn_list_bukti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            android:text="Bukti Pembayaran"
            app:layout_constraintTop_toBottomOf="@+id/btn_payment"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

